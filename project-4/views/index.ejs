<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Management</title>
</head>
<style>
 body {
    font-family: 'Poppins', sans-serif;
    text-align: center;
    background-color: #f8f1e4;
    margin: 0;
    padding: 20px;
}

h2 {
    color: #6d4c41;
    font-size: 28px;
    margin-bottom: 20px;
}

/* Form Styles */
form {
    background: #ffffff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    display: inline-block;
}

form table {
    width: 100%;
}

form td {
    font-size: 18px;
    color: #6d4c41;
    padding: 10px;
}

input[type="text"],
input[type="number"] {
    font-size: 18px;
    padding: 8px;
    width: 100%;
    border: 1px solid #ccc;
    border-radius: 5px;
}

input[type="submit"] {
    background: #8d6e63;
    color: white;
    font-size: 20px;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    border-radius: 5px;
    transition: 0.3s;
}

input[type="submit"]:hover {
    background: #6d4c41;
}

/* Table Styles */
table {
    width: 90%;
    border-collapse: collapse;
    margin-top: 20px;
    background: white;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
}

th, td {
    padding: 12px;
    text-align: center;
    border: 1px solid #ddd;
    font-size: 18px;
}

th {
    background-color: #8d6e63;
    color: white;
}

td {
    color: #6d4c41;
}

/* Button Styles */
button {
    background: #8d6e63;
    color: white;
    font-size: 16px;
    border: none;
    padding: 8px 15px;
    cursor: pointer;
    border-radius: 5px;
    transition: 0.3s;
}

button:hover {
    background: #6d4c41;
}



</style>
<body>
    <div align="center">
        <h2>Book Information</h2>
        <form method="post" action="/add-book">
            <table align="center">
                <tr>
                    <td>Title:</td>
                    <td><input type="text" name="title" required /></td>
                </tr>
                <tr>
                    <td>Author:</td>
                    <td><input type="text" name="author" required /></td>
                </tr>
                <tr>
                    <td>Country:</td>
                    <td><input type="text" name="country" required /></td>
                </tr>
                <tr>
                    <td>Language:</td>
                    <td><input type="text" name="language" required /></td>
                </tr>
                <tr>
                    <td>Edition:</td>
                    <td><input type="text" name="edition" required /></td>
                </tr>
                <tr>
                    <td>Pages:</td>
                    <td><input type="text" name="pages" required /></td>
                </tr>
                <tr>
                    <td>Genre:</td>
                    <td><input type="text" name="genre" required /></td>
                </tr>
                <tr>
                    <td>Published Year:</td>
                    <td><input type="number" name="publishedYear" required /></td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="Add Book" /></td>
                </tr>
            </table>
        </form>

        <br><br>
        <br>
        
        <h2>Book List</h2>
        <table border="1" align="center">
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Author</th>
                <th>Country</th>
                <th>Language</th>
                <th>Edition</th>
                <th>Pages</th>
                <th>Genre</th>
                <th>Published Year</th>
                <th colspan="2">Action</th>
            </tr>
            <% books.forEach((book , index) => { %>
                <tr>
                    <td><%= index +1 %></td>
                    <td><%= book.title %></td>
                    <td><%= book.author %></td>
                    <td><%= book.country %></td>
                    <td><%= book.language %></td>
                    <td><%= book.edition %></td>
                    <td><%= book.pages %></td>
                    <td><%= book.genre %></td>
                    <td><%= book.publishedYear %></td>
                    <td>
                        <a href="/edit-book/<%= book._id %>">
                            <button>Edit</button>
                        </a>
                    </td>
                    <td><a href="/delete-book/<%= book._id %>">
                        <button>Delete</button>
                    </a></td>
                </tr>
            <% }); %>
        </table>
    </div>
</body>
</html>

