<%- include('header') %>
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Blogs</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Blog Management</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->

    <!-- ============================================================== -->
    <!-- Container fluid -->
    <!-- ============================================================== -->
    <div class="container-fluid">
    
        

        <!-- ðŸ”¹ Blog Cards -->
        <div class="row">
            <% blogs.map((blog, i) => { %>  
                <div class="col-md-4">
                    <div class="card">
                        <img src="<%= blog.image %>" class="card-img-top" alt="Blog Image" height="200">
                        <div class="card-body">         
                            <h5 class="card-title"><%= blog.title %></h5>
                            <p class="card-text">
                                <%= blog.content ? blog.content : "No content available" %>
                            </p>
                            <p class="text-muted">By: <%= blog.author %></p>
                            <p class="text-muted"><strong>Category:</strong> <%= blog.category %> || <strong>Language:</strong> <%= blog.language %></p>
                            <p class="text-muted"><strong>Date:</strong> <%= new Date(blog.createdAt).toLocaleDateString() %></p>
                            <div class="d-flex justify-content-between">
                                <a href="/blog/single-blog/<%= blog.id %>" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Read More
                                </a>
                                <a href="/blog/edit_blog/<%= blog.id %>" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a href="/blog/delete-blog/<%= blog.id %>" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid -->
    <!-- ============================================================== -->
<%- include('footer') %>
